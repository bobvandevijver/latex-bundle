{% block bobv_latex_graphic_element %}

  % Graphic element
  \begin{figure}[{{ placement }}]
    {% include '@BobvLatex/extra_commands.twig.twig' %}
    \includegraphics[{% if width != null %}width={{ width }}{% if options != '' %},{% endif %}{% endif %}{{ options }}]{ {{- location -}} }
    {% if centering%}
      \centering
    {% endif %}
    {% if caption != false %}
      \caption{ {{- caption|latex_escape -}} }
    {% endif %}
    \label{ {{- label|latex_escape -}} }
  \end{figure}

{% endblock bobv_latex_graphic_element %}
